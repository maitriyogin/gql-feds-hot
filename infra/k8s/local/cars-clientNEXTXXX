apiVersion: apps/v1
kind: Deployment
metadata:
  name: cars-client-depl
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cars-client
  template:
    metadata:
      labels:
        app: cars-client
    spec:
      containers:
        - name: cars-client
          image: maitriyogin/cars-client
---
apiVersion: v1
kind: Service
metadata:
  name: cars-client-srv
spec:
  selector:
    app: cars-client
  ports:
    - name: cars-client
      protocol: TCP
      port: 3000
      targetPort: 3000

---
apiVersion: v1
kind: Service
metadata:
  name: caris-client-node-srv
spec:
  type: NodePort
  selector:
    app: cars-client
  ports:
    - name: cars-client
      protocol: TCP
      port: 3000
      targetPort: 3000
      nodePort: 30001
