{
  "name": "esl-query",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "start": "ts-node-dev --exit-child index.ts",
    "tsn": "ts-node src/index.ts",
    "build": "docker build -t maitriyogin/esl-query .",
    "push": "docker push maitriyogin/esl-query",
    "db": "yarn build && yarn push",
    "ka": "kubectl apply -f ../infra/k8s/local/esl-query-depl.yaml",
    "kr": "kubectl rollout restart deployment esl-query-depl",
    "kd": "kubectl delete deployment esl-query-depl",
    "dkr": "yarn db && yarn kr",
    "apply": "yarn db && yarn ka",
    "supergraph": "rover supergraph compose --config ./supergraph.yaml > supergraph.graphql"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/gateway": "^2.5.6",
    "@apollo/subgraph": "^2.5.6",
    "apollo-server": "^3.12.1",
    "mongoose": "^7.6.3",
    "prettier": "^3.0.3"
  },
  "devDependencies": {
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
